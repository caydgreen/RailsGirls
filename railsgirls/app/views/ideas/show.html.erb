<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @idea.name %>
</p>

<p>
  <b>Description:</b>
  <%= @idea.description %>
</p>

<p>
  <b>Picture:</b>
  <%= image_tag(@idea.picture_url, :width => 200) if @idea.picture.present? %>
</p>

<p>
  <b>Category:</b>
  <%= @idea.category.name %>
</p>

<p>
  <b>Rating:</b>
  <%= @idea.rating %>
</p>

<%= link_to 'Edit Idea', edit_idea_path(@idea) %> |
<%= link_to 'Back to Ideas', ideas_path %>
